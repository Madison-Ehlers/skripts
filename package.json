{
  "name": "skripts",
  "version": "0.1.2",
  "description": "CLI for project scripts and configuration.",
  "homepage": "https://github.com/therockstorm/skripts#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/skripts/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "dist",
    "base-tsconfig.json",
    "config.js",
    ".eslintrc.js",
    "prettier.config.js"
  ],
  "keywords": [
    "cli",
    "configuration",
    "kcd-scripts",
    "react-scripts",
    "serverless",
    "scripts",
    "skripts",
    "toolbox",
    "typescript"
  ],
  "main": "dist/index.js",
  "bin": {
    "skripts": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/skripts.git"
  },
  "scripts": {
    "build": "tsc && cp -r src/config dist/config",
    "clean": "npm run skripts -- clean dist --verbose",
    "format": "npm run skripts -- prettier --verbose",
    "lint": "npm run skripts -- eslint --verbose",
    "publish": "npm run clean && npm run build && npm publish",
    "skripts": "npm run build && node dist",
    "test": "npm run skripts -- jest --verbose",
    "help": "npm run build && node dist --help",
    "watch": "npm run test -- --watch"
  },
  "dependencies": {
    "@therockstorm/utils": "^3.0.12",
    "@types/aws-lambda": "^8.10.33",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/read-pkg-up": "^6.0.0",
    "@types/which": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "acorn": "^7.1.0",
    "commander": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "read-pkg-up": "^7.0.0",
    "serverless": "^1.53.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-webpack": "^5.3.1",
    "source-map-support": "^0.5.13",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "webpack": "^4.41.0",
    "webpack-node-externals": "^1.7.2",
    "which": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run skripts -- pre-commit --verbose"
    }
  },
  "devDependencies": {
    "husky": "^3.0.8"
  }
}
